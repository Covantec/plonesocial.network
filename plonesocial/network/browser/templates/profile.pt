<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

<body>

    <div metal:fill-slot="content">
    <metal:main-macro define-macro="content">

      <div tal:condition="not:view/data">
        <h2>Nothing here</h2>
        <div tal:condition="view/id">
          No such user <b tal:content="view/id" />.
        </div>
      </div>

      <div class="plonesocial profile"
           tal:condition="view/data">
        <div tal:content="view/data" />
        <div tal:content="structure view/portrait" />
      </div>


    </metal:main-macro>
    </div>

</body>
</html>
