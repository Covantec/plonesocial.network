<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

<body>

  <div metal:fill-slot="content">
    <metal:main-macro define-macro="content">
      <div id="content">
        
        <div tal:condition="not:view/data">
          <h2>Nothing here</h2>
          <div tal:condition="view/userid">
            No such user <b tal:content="view/userid" />.
          </div>
        </div>
        
        <div class="plonesocial"
             id="profile"
             tal:condition="view/data">
          
          <div class="portrait"
               tal:content="structure view/portrait" />
          
          <div class="personal-info">
            
            <h1 tal:content="view/data/fullname">user name</h1>
            <div class="userid"
               tal:content="string: @${view/userid}">@who</div>
            <div class="bio"
               tal:content="view/data/description">bio</div>
            <div>
              <span class="location"
                    tal:condition="view/data/location"
                    tal:content="view/data/location">location</span>
              <a class="home_page"
                 tal:condition="view/data/home_page"
                 tal:attributes="href view/data/home_page"
                 tal:content="view/data/home_page">url</a>
            </div>
            
          </div><!-- /info -->

          <div class="subunsub" tal:condition="view/show_subunsub">
            <form method="post">
              <input type="submit" name="subunsub" value="follow" 
                     tal:condition="not:view/is_following" />
              <input type="submit" name="subunsub" value="unfollow" 
                     tal:condition="view/is_following" />
            </form>
          </div>
          
        </div><!-- /profile -->


        <div tal:content="structure view/stream_provider" />


      </div><!-- /content -->
    </metal:main-macro>
  </div>
    
</body>
</html>
